@model IEnumerable<BugTracker.Models.Invite>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>



<div class="container-fluid">

    <div class="col-lg-12 col">
        <div class="mt-5">
            <div class="card">
                <div class="card-header">
                    <h5>Projects</h5><span></span>
                </div>
                <div class="card custom-card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class=" table table-striped table-bordered text-nowrap" " id="basic-1">
                                <thead class="">
                                    <tr>
                                        <th>
                            @Html.DisplayNameFor(model => model.InviteDate)
                                        </th>
                                        <th>
                            @Html.DisplayNameFor(model => model.JoinDate)
                                        </th>
                                        <th>
                            @Html.DisplayNameFor(model => model.CompanyToken)
                                        </th>
                                        <th>
                            @Html.DisplayNameFor(model => model.InviteeEmail)
                                        </th>
                                        <th>
                            @Html.DisplayNameFor(model => model.InviteeFirstName)
                                        </th>
                                        <th>
                            @Html.DisplayNameFor(model => model.InviteeLastName)
                                        </th>
                                        <th>
                            @Html.DisplayNameFor(model => model.Message)
                                        </th>
                                        <th>
                            @Html.DisplayNameFor(model => model.IsValid)
                                        </th>
                                        <th>
                            @Html.DisplayNameFor(model => model.Company)
                                        </th>
                                        <th>
                            @Html.DisplayNameFor(model => model.Project)
                                        </th>
                                        <th>
                            @Html.DisplayNameFor(model => model.Invitor)
                                        </th>
                                        <th>
                            @Html.DisplayNameFor(model => model.Invitee)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                            @foreach (var item in Model)
                            {
                                        <tr>
                                            <td>
                                        @Html.DisplayFor(modelItem => item.InviteDate)
                                            </td>
                                            <td>
                                        @Html.DisplayFor(modelItem => item.JoinDate)
                                            </td>
                                            <td>
                                        @Html.DisplayFor(modelItem => item.CompanyToken)
                                            </td>
                                            <td>
                                        @Html.DisplayFor(modelItem => item.InviteeEmail)
                                            </td>
                                            <td>
                                        @Html.DisplayFor(modelItem => item.InviteeFirstName)
                                            </td>
                                            <td>
                                        @Html.DisplayFor(modelItem => item.InviteeLastName)
                                            </td>
                                            <td>
                                        @Html.DisplayFor(modelItem => item.Message)
                                            </td>
                                            <td>
                                        @Html.DisplayFor(modelItem => item.IsValid)
                                            </td>
                                            <td>
                                        @Html.DisplayFor(modelItem => item.Company.Name)
                                            </td>
                                            <td>
                                        @Html.DisplayFor(modelItem => item.Project.Description)
                                            </td>
                                            <td>
                                        @Html.DisplayFor(modelItem => item.Invitor.Id)
                                            </td>
                                            <td>
                                        @Html.DisplayFor(modelItem => item.Invitee.Id)
                                            </td>
                                            <td>
                                                <a class="btn btn-md bg-primary" asp-action="Archive" asp-route-id="@item.Id">Archive</a>   |
                                                <a asp-action="Restore" asp-route-id="@item.Id">Restore</a> |
                                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                                <a asp-action="AssignProjectManager" asp-route-id="@item.Id">Assign PM</a> |
                                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                            </td>
                                        </tr>
                            }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
