@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "/Views/Shared/_LoginLayout.cshtml";

    
}
<div class="col-lg-6  col-xl-5 col-xs-12 col-sm-12 d-none d-lg-block text-center bg-primary details">
    <div class="mt-5 pt-4 p-2 pos-absolute">
        <img src="~/img/1.png" class="d-lg-none header-brand-img text-start float-start mb-4 error-logo-light" alt="logo">
        <img src="~/img/brand/logo.png" class=" d-lg-none header-brand-img text-start float-start mb-4 error-logo" alt="logo">
        <div class="clearfix"></div>
        <img src="~/img/1.png" class="ht-100 mb-0" alt="user">
        <h5 class="mt-4 text-white">Create Your Account</h5>
        <span class="tx-white-6 tx-13 mb-5 mt-xl-0">Signup to create, discover and connect with the global community</span>
        <hr />
        <hr />
        <button class="btn btn-md bg-outline-warning" asp-action="Archive" >Demo Admin</button>
        <button class="btn btn-md bg-primary" asp-action="Archive" >Demo ProjectManager</button>
        <button class="btn btn-md bg-primary" asp-action="Archive" >Demo Developer</button>
        <button class="btn btn-md bg-primary" asp-action="Archive" >Demo Submitter</button>
    </div>
</div>
<div class="col-lg-6 col-xl-7 col-xs-12 col-sm-12 login_form">
    <div class="main-container container-fluid">
        <div class="row row-sm">
            <div class="card-body mt-2 mb-2">
                <img src="~/img/1.png" class=" d-lg-none header-brand-img text-start float-start mb-4 ht-100" alt="logo">
                <div class="clearfix"></div>
                <form id="account" method="post">
                    <h5 class="text-start mb-2">Signin to Your Account</h5>
                    <p class="mb-4 text-muted tx-13 ms-0 text-start">Signin to create, discover and connect with the global community</p>
                    <div class="form-group text-start">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="Enter your email">
                    </div>
                    <div class="form-group text-start">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" placeholder="Enter your password">
                    </div>
                    <button id="login-submit" type="submit" class="btn ripple btn-main-primary btn-block">Sign In</button>
                </form>
                <div class="text-start mt-5 ms-0">
                    <div class="mb-1"><a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a></div>
                    <div>Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register Here</a></div>
                </div>
            </div>
        </div>
    </div>
</div>